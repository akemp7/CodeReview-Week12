@model Bakery.Models.Flavor

<h3>Add a flavor </h3>
<hr>
@using (Html.BeginForm())
{
    @Html.Label("Description", "Desciption: ")
    @Html.TextBoxFor(model => model.Description, new { @class="form-control", required="required"})
    <br>
    @Html.Label("Treat: ")
    @Html.DropDownList("TreatId")
    <input type="submit" value="Add Flavor" class="btn btn-info">
}
<button class="btn btn-default">@Html.ActionLink("Back To Your Account", "Index", "Account")</button>