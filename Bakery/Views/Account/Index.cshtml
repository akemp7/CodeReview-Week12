@using Bakery.Models
@using System.Security.Claims

<h2>Hello @User.Identity.Name!</h2>
<hr />

@using (Html.BeginForm("Index", "Treats"))
{
    @Html.Label("Browse by treat: ")
    @Html.DropDownList("TreatId")
    <input type="submit" class="btn btn-default" value="See Treat">
}

@using (Html.BeginForm("Index", "Flavors"))
{
    @Html.Label("Browse by flavor: ")
    @Html.DropDownList("FlavorId")
    <input type="submit" class="btn btn-default" value="See Flavor">
}



<button class="btn btn-default">@Html.ActionLink("Add a flavor", "Create", "Flavors")</button>
<button class="btn btn-default">@Html.ActionLink("Add a treat", "Create", "Treats")</button>


@if (User.Identity.IsAuthenticated)
{
    @using (Html.BeginForm("LogOff", "Account"))
    {
        <input type="submit" class="btn btn-default" value="Log out" />
    }
}
